<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ideenkonzept.ibanrechner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>IBAN Rechner</name>
    <description>
        The easy IBAN Rechner by Ideenkonzept
    </description>
    <author email="ahmed@2nh.de" href="http://ideenkonzept.de">
        Ideenkonzept
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="src/assets/images/res/icons/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="src/assets/images/res/icons/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="src/assets/images/res/icons/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="src/assets/images/res/icons/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="src/assets/images/res/icons/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="src/assets/images/res/icons/android/icon-192-xxxhdpi.png" />
        <splash density="ldpi" src="src/assets/images/res/screens/android/screen-ldpi-portrait.png" />
        <splash density="mdpi" src="src/assets/images/res/screens/android/screen-mdpi-portrait.png" />
        <splash density="hdpi" src="src/assets/images/res/screens/android/screen-hdpi-portrait.png" />
        <splash density="xhdpi" src="src/assets/images/res/screens/android/screen-xhdpi-portrait.png" />
        <splash density="xxhdpi" src="src/assets/images/res/screens/android/screen-xxhdpi-portrait.png" />
        <splash density="xxxhdpi" src="src/assets/images/res/screens/android/screen-xxxhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="src/assets/images/res/icons/ios/icon-small.png" width="29" />
        <icon height="58" src="src/assets/images/res/icons/ios/icon-small@2x.png" width="58" />
        <icon height="40" src="src/assets/images/res/icons/ios/icon-40.png" width="40" />
        <icon height="80" src="src/assets/images/res/icons/ios/icon-40@2x.png" width="80" />
        <icon height="50" src="src/assets/images/res/icons/ios/icon-50.png" width="50" />
        <icon height="100" src="src/assets/images/res/icons/ios/icon-50@2x.png" width="100" />
        <icon height="57" src="src/assets/images/res/icons/ios/icon.png" width="57" />
        <icon height="114" src="src/assets/images/res/icons/ios/icon@2x.png" width="114" />
        <icon height="60" src="src/assets/images/res/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="src/assets/images/res/icons/ios/icon-60@2x.png" width="120" />
        <icon height="180" src="src/assets/images/res/icons/ios/icon-60@3x.png" width="180" />
        <icon height="72" src="src/assets/images/res/icons/ios/icon-72.png" width="72" />
        <icon height="144" src="src/assets/images/res/icons/ios/icon-72@2x.png" width="144" />
        <icon height="76" src="src/assets/images/res/icons/ios/icon-76.png" width="76" />
        <icon height="152" src="src/assets/images/res/icons/ios/icon-76@2x.png" width="152" />
        <icon height="167" src="src/assets/images/res/icons/ios/icon-167.png" width="167" />
        <icon height="167" src="src/assets/images/res/icons/ios/icon-83.5@2x.png" width="167" />
        <splash height="480" src="src/assets/images/res/screens/ios/Default~iphone.png" width="320" />
        <splash height="960" src="src/assets/images/res/screens/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="src/assets/images/res/screens/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="src/assets/images/res/screens/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="src/assets/images/res/screens/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="src/assets/images/res/screens/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="src/assets/images/res/screens/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="src/assets/images/res/screens/ios/Default-667h.png" width="750" />
        <splash height="2208" src="src/assets/images/res/screens/ios/Default-736h.png" width="1242" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="src/assets/images/splash.png" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashScreenBackgroundColor" value="green" />
        <preference name="ShowSplashScreen" value="false" />
        <preference name="SplashScreenWidth" value="600" />
        <preference name="SplashScreenHeight" value="300" />
    </platform>
    <platform name="windows">
        <preference name="windows-target-version" value="10.0" />
        <icon src="src/assets/images/res/icons/windows/storelogo.png" target="StoreLogo" />
        <icon src="src/assets/images/res/icons/windows/smalllogo.png" target="Square30x30Logo" />
        <icon src="src/assets/images/res/icons/windows/Square44x44Logo.png" target="Square44x44Logo" />
        <icon src="src/assets/images/res/icons/windows/Square70x70Logo.png" target="Square70x70Logo" />
        <icon src="src/assets/images/res/icons/windows/Square71x71Logo.png" target="Square71x71Logo" />
        <icon src="src/assets/images/res/icons/windows/Square150x150Logo.png" target="Square150x150Logo" />
        <icon src="src/assets/images/res/icons/windows/Square310x310Logo.png" target="Square310x310Logo" />
        <splash src="src/assets/images/res/screens/windows/splashscreen.png" target="SplashScreen" />
        <splash src="src/assets/images/res/screens/windows/splashscreenphone.png" target="SplashScreenPhone" />
    </platform>
    <allow-navigation href="*" />
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <engine name="windows" spec="^5.0.0" />
    <plugin name="com.verso.cordova.clipboard" spec="D:\CordovaClipboard-master" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
